<h1>Editing Book</h1>

	<% @book.errors.full_messages.each do |message| %>
 <div class="form-error">
  <%= message %>
 </div>
<% end %>

<%= form_for(@book,url:"/books/#{@book.id}") do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title%>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Update Book' %>
<% end %>

    <%= link_to "Show",book_path('book.id') %>
    |
    <%= link_to "Back",book_path('/books') %>