<h1><strong>Editing Book</strong></h1>


<%= form_for(@book,url:"/books/#{@book.id}") do |f| %>
	<h3>Title</h3>
	<%= f.text_field :title%>

	<h3>Body</h3>
	<%= f.text_area :body %><br>

	<%= f.submit 'Update Book' %>
<% end %>

    <%= link_to "Show",book_path(@book.id) %>
