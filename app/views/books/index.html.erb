<h1>Books</h1>
<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr> 
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", book_path(book.id) %>
<%= link_to "edit", edit_book_path(book.id) %>
<%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>
</tr>  
<% end %>
</tbody>   
</table>


<h3>New book</h3>

<% @book.errors.full_messages.each do |message| %>
	<div class="form-error">
	<%= message %>
	</div>
<% end %>

<!-- form_for部分 -->
<%= form_for(@book,url: '/books') do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>




<br><%= f.submit 'Create Book' %></br>
<% end %>
